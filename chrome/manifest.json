{
  "manifest_version": 2,

  "name": "Clipx",
  "description": "A browser extension â€“ able to store and manage various types of resources (fragments of Web content like links, images, videos etc.) by permitting users to share these among their friends on popular social networks.",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "<all_urls>",
    "unlimitedStorage"
  ],
  "content_security_policy": "script-src 'self' https://platform.twitter.com https://connect.facebook.net https://apis.google.com; object-src 'self'",

  "background": {
    "scripts": ["background.js"]
  }
}